<%- include('partials/header', 
    {currentPage: currentPage,
    description: description, 
    additionalCSS: ['/css/animations.css', '/css/showcase.css', '/css/project-popup.css', '/css/demo-popup.css']}) %>
        <section class="services-hero">
            <div class="container">
                <div class="services-hero-content">
                    <h1 class="animate-text">
                        Our
                        <span class="gradient-text">AI Solutions</span>
                        in Action
                    </h1>
                    <p class="animate-text-delay">Explore our portfolio of successful AI implementations across various industries.</p>
                </div>
                <div id="particles-background" class="particles-container"></div>

            </div>
        </section>
        <!-- Filter Section -->
        <section class="showcase-filter">
            <div class="container">
                <div class="filter-controls">
                    <button class="filter-btn active" data-filter="all">All Projects</button>
                    <button class="filter-btn" data-filter="agentic-ai">Agentic AI</button>
                    <button class="filter-btn" data-filter="generative-ai">Generative AI</button>
                    <button class="filter-btn" data-filter="ai-automation">AI Automation</button>
                    <button class="filter-btn" data-filter="nlp">Natural Language Processing</button>
                </div>
                <!-- <div id="particles-background" class="particles-container"></div> -->
            </div>
        </section>
        <!-- Case Studies Grid -->
        <section class="case-studies-grid ">
            <div class="container">
                <div class="grid">
                    <% projects.forEach(function(project) { %>
                    <div class="case-study-item" data-category="<%= project.category %>" data-project-id="<%= project._id %>">
                        <div class="case-study-card">
                            <div class="case-study-image">
                                <img src="<%= project.mainImage %>" alt="<%= project.title %>">
                                <div class="overlay">
                                    <a href="#" class="btn btn-primary view-details-btn">View Details</a>
                                </div>
                            </div>
                            <div class="case-study-content">
                                <span class="industry"><%= project.industry %></span>
                                <h3><%= project.title %></h3>
                                <p><%= project.shortDescription %></p>
                                <div class="tech-icons">
                                    <% project.techStack.forEach(function(tech) { %>
                                        <span class="tech-name"><%= tech %></span>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                           <div class="project-details-hidden" style="display: none;">
                               <p><%= project.fullDescription %></p>
                               <div class="tech-tags">
                                   <% project.techStack.forEach(function(tech) { %>
                                       <span class="tech-tag"><%= tech %></span>
                                   <% }); %>
                               </div>
                               <div class="implementation-details">
                                   <%= project.implementation %>
                               </div>
                               <div class="results-details">
                                   <ul>
                                       <% project.results.forEach(function(result) { %>
                                           <li><%= result %></li>
                                       <% }); %>
                                   </ul>
                               </div>
                               <div class="carousel-images">
                                   <% project.carouselImages.forEach(function(image) { %>
                                       <img src="<%= image %>" alt="Carousel Image">
                                   <% }); %>
                               </div>
                               <div class="carousel-videos">
                                   <% project.carouselVideos.forEach(function(video) { %>
                                       <span data-url="<%= video.url %>" data-type="<%= video.type %>"></span>
                                   <% }); %>
                               </div>
                               <div class="github-link">
                                   <%= project.githubLink %>
                               </div>
                           </div>
                       </div>
                       <% }); %>
                </div>
            </div>
        </section>
        <!-- Interactive Demo Section -->
        <section class="interactive-demo">
            <div class="container">
                <div class="section-header">
                    <h2>
                        Interactive
                        <span class="gradient-text">AI Demos</span>
                    </h2>
                    <p>Experience our AI capabilities firsthand with these interactive demonstrations</p>
                </div>
                <div class="demo-grid">
                    <div class="demo-card">
                        <div class="demo-preview">
                            <video src="/demos/whatsapp%20automation.mp4" autoplay muted loop playsinline></video>
                            <div class="demo-overlay">
                                <span>Try It</span>
                            </div>
                        </div>
                        <div class="demo-content">
                            <h3>Islamic Knowledge Explorer</h3>
                            <p>Watch a demo of our agentic RAG-based system for Quranic and Hadith analysis.</p>
                            <a href="#" class="btn btn-secondary" data-video-url="/demos/whatsapp%20automation.mp4" data-video-type="local">Launch Demo</a>
                        </div>
                    </div>
                    <div class="demo-card">
                        <div class="demo-preview">
                            <video src="/demos/whatsapp%20automation.mp4" autoplay muted loop playsinline></video>
                            <div class="demo-overlay">
                                <span>Try It</span>
                            </div>
                        </div>
                        <div class="demo-content">
                            <h3>WhatsApp Automation System</h3>
                            <p>See how our WhatsApp automation system handles leads and customer support.</p>
                            <a href="#" class="btn btn-secondary" data-video-url="/demos/whatsapp%20automation.mp4" data-video-type="local">Launch Demo</a>
                        </div>
                    </div>
                    <div class="demo-card">
                        <div class="demo-preview">
                            <video src="/demos/whatsapp%20automation.mp4" autoplay muted loop playsinline></video>
                            <div class="demo-overlay">
                                <span>Try It</span>
                            </div>
                        </div>
                        <div class="demo-content">
                            <h3>Complete E-commerce Solution</h3>
                            <p>A walkthrough of our full-stack e-commerce platform with server-side rendering.</p>
                            <a href="#" class="btn btn-secondary" data-video-url="/demos/whatsapp%20automation.mp4" data-video-type="local">Launch Demo</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- CTA Section -->
        <section class="cta">
            <div class="container">
                <div class="cta-content">
                    <h2>Ready to Build Your AI Solution?</h2>
                    <p>Let's discuss how our expertise can help you achieve your business goals through innovative AI implementation.</p>
                    <a href="contact" class="btn btn-primary">Start Your Project</a>
                </div>
            </div>
        </section>
<%- include('partials/footer', {additionalScripts: ['/js/project-popup.js', '/js/demo-popup.js']}) %>
