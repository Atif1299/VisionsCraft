<%- include('partials/header', 
    {currentPage: currentPage,
    description: description, 
    additionalCSS: ['/css/animations.css', '/css/showcase.css', '/css/project-popup.css', '/css/demo-popup.css']}) %>
        <section class="services-hero">
            <div class="container">
                <div class="services-hero-content">
                    <h1 class="animate-text">
                        Our
                        <span class="gradient-text">AI Solutions</span>
                        in Action
                    </h1>
                    <p class="animate-text-delay">Explore our portfolio of successful AI implementations across various industries.</p>
                </div>
                <div id="particles-background" class="particles-container"></div>

            </div>
        </section>
        <!-- Filter Section -->
        <section class="showcase-filter">
            <div class="container">
                <div class="filter-controls">
                    <button class="filter-btn active" data-filter="all">All Projects</button>
                    <button class="filter-btn" data-filter="AI Development">AI Development</button>
                    <button class="filter-btn" data-filter="AI Automation">AI Automation</button>
                    <button class="filter-btn" data-filter="Web Development">Web Development</button>
                </div>
                <!-- <div id="particles-background" class="particles-container"></div> -->
            </div>
        </section>
        <!-- Case Studies Grid -->
        <section class="case-studies-grid ">
            <div class="container">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-warning" style="background: #fff3cd; border: 1px solid #ffc107; padding: 20px; border-radius: 8px; margin-bottom: 30px; text-align: center;">
                        <i class="fas fa-exclamation-triangle" style="color: #856404; font-size: 24px; margin-bottom: 10px;"></i>
                        <p style="color: #856404; margin: 0;"><%= error %></p>
                    </div>
                <% } %>
                
                <% if (!projects || projects.length === 0) { %>
                    <div class="empty-state" style="text-align: center; padding: 60px 20px;">
                        <i class="fas fa-folder-open" style="font-size: 64px; color: #ccc; margin-bottom: 20px;"></i>
                        <h3 style="color: #666; margin-bottom: 10px;">No Projects Available</h3>
                        <p style="color: #999;">We're currently updating our showcase. Please check back soon!</p>
                        <a href="/" class="btn btn-primary" style="margin-top: 20px;">Back to Home</a>
                    </div>
                <% } else { %>
                <div class="grid">
                    <% projects.forEach(function(project) { %>
                    <div class="case-study-item" data-category="<%= project.category %>" data-project-id="<%= project._id %>">
                        <div class="case-study-card">
                            <div class="case-study-image">
                                <img src="<%= project.mainImage %>" alt="<%= project.title %>">
                                <div class="overlay">
                                    <a href="#" class="btn btn-primary view-details-btn">View Details</a>
                                </div>
                            </div>
                            <div class="case-study-content">
                                <span class="industry"><%= project.industry %></span>
                                <h3><%= project.title %></h3>
                                <p><%= project.shortDescription %></p>
                                <div class="tech-icons">
                                    <% project.techStack.forEach(function(tech) { %>
                                        <span class="tech-name"><%= tech %></span>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                           <div class="project-details-hidden" style="display: none;">
                               <p><%= project.fullDescription %></p>
                               <div class="tech-tags">
                                   <% project.techStack.forEach(function(tech) { %>
                                       <span class="tech-tag"><%= tech %></span>
                                   <% }); %>
                               </div>
                               <div class="implementation-details">
                                   <%= project.implementation %>
                               </div>
                               <div class="results-details">
                                   <ul>
                                       <% project.results.forEach(function(result) { %>
                                           <li><%= result %></li>
                                       <% }); %>
                                   </ul>
                               </div>
                               <div class="carousel-images">
                                   <% project.carouselImages.forEach(function(image) { %>
                                       <img src="<%= image %>" alt="Carousel Image">
                                   <% }); %>
                               </div>
                               <div class="carousel-videos">
                                   <% project.carouselVideos.forEach(function(video) { %>
                                       <span data-url="<%= video.url %>" data-type="<%= video.type %>"></span>
                                   <% }); %>
                               </div>
                               <div class="github-link">
                                   <%= project.githubLink %>
                               </div>
                           </div>
                       </div>
                       <% }); %>
                </div>
                <% } %>
            </div>
        </section>
        <!-- Interactive Demo Section -->
        <section class="interactive-demo">
            <div class="container">
                <div class="section-header">
                    <h2>
                        Interactive
                        <span class="gradient-text">AI Demos</span>
                    </h2>
                    <p>Experience our AI capabilities firsthand with these interactive demonstrations</p>
                </div>
                <div class="demo-grid">
                    <div class="demo-card">
                        <div class="demo-preview">
                            <video poster="/demos/whatsapp_automation.png" data-src="/demos/whatsapp%20automation.mp4" muted loop playsinline></video>
                            <div class="demo-overlay">
                                <span>Try It</span>
                            </div>
                        </div>
                        <div class="demo-content">
                            <h3>RAG-Based Product Recommender</h3>
                            <p>Experience our AI-powered personalized recommendation system that enhances e-commerce shopping experience.</p>
                            <a href="#" class="btn btn-secondary" data-video-url="/demos/whatsapp%20automation.mp4" data-video-type="local">Launch Demo</a>
                        </div>
                    </div>
                    <div class="demo-card">
                        <div class="demo-preview">
                            <video poster="/demos/whatsapp_automation.png" data-src="/demos/whatsapp%20automation.mp4" muted loop playsinline></video>
                            <div class="demo-overlay">
                                <span>Try It</span>
                            </div>
                        </div>
                        <div class="demo-content">
                            <h3>WhatsApp Customer Support System</h3>
                            <p>See how our intelligent WhatsApp automation handles lead conversion and provides 24/7 customer support for educational institutions.</p>
                            <a href="#" class="btn btn-secondary" data-video-url="/demos/whatsapp%20automation.mp4" data-video-type="local">Launch Demo</a>
                        </div>
                    </div>
                    <div class="demo-card">
                        <div class="demo-preview">
                            <video poster="/demos/whatsapp_automation.png" data-src="/demos/whatsapp%20automation.mp4" muted loop playsinline></video>
                            <div class="demo-overlay">
                                <span>Try It</span>
                            </div>
                        </div>
                        <div class="demo-content">
                            <h3>Full-Stack E-commerce Platform</h3>
                            <p>Explore our high-performance e-commerce platform with server-side rendering, admin dashboard, and secure checkout system.</p>
                            <a href="#" class="btn btn-secondary" data-video-url="/demos/whatsapp%20automation.mp4" data-video-type="local">Launch Demo</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
<%- include('partials/cta') %>
<%- include('partials/footer', {additionalScripts: ['/js/project-popup.js', '/js/demo-popup.js', '/js/main.js']}) %>
