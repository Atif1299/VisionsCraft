<%- include('partials/header', {
    currentPage: 'error',
    title: 'Error - VisionsCraft',
    description: 'An error occurred'
}) %>

<section class="error-page" style="min-height: 70vh; display: flex; align-items: center; justify-content: center; padding: 60px 20px;">
    <div class="container">
        <div class="error-content" style="text-align: center; max-width: 600px; margin: 0 auto;">
            <i class="fas fa-exclamation-triangle" style="font-size: 80px; color: #ffc107; margin-bottom: 30px;"></i>
            <h1 style="font-size: 2.5rem; color: #333; margin-bottom: 20px;">Oops! Something Went Wrong</h1>
            <% if (typeof message !== 'undefined' && message) { %>
                <p style="font-size: 1.2rem; color: #666; margin-bottom: 30px;"><%= message %></p>
            <% } else { %>
                <p style="font-size: 1.2rem; color: #666; margin-bottom: 30px;">
                    We encountered an unexpected error. Please try again later.
                </p>
            <% } %>
            <div style="margin-top: 40px;">
                <a href="/" class="btn btn-primary" style="margin-right: 15px;">
                    <i class="fas fa-home"></i> Back to Home
                </a>
                <a href="/contact" class="btn btn-secondary">
                    <i class="fas fa-envelope"></i> Contact Support
                </a>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
